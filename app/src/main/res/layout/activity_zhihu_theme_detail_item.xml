<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="5dp"
    android:padding="10dp"
    app:cardElevation="3dp"
    app:cardCornerRadius="5dp"
    android:background="@color/colorCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/ll_zhihu_theme_detail_item_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.example.jon.fangnews.widget.SquareImageView
            android:id="@+id/iv_zhihu_theme_detail_item_pic"
            android:layout_margin="10dp"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@mipmap/ic_android"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/tv_zhihu_theme_detail_item_name"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="33333"
            android:textSize="16sp"
            android:textColor="@color/colorText"/>

    </LinearLayout>


</android.support.v7.widget.CardView>