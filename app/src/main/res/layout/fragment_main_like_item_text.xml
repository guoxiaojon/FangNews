<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="4dp"
    android:layout_width="match_parent"
    android:layout_marginStart="10dp"
    android:background="@color/colorCard"
    android:layout_marginEnd="10dp"
    android:layout_marginTop="6dp"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/in_use"
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">
            <com.example.jon.fangnews.widget.SquareImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/iv_main_like_item_text_pic"/>
            <TextView
                android:layout_marginStart="10dp"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_main_like_item_text_title"/>


        </LinearLayout>
        <TextView
            android:layout_below="@+id/in_use"
            android:textColor="#989898"
            android:id="@+id/tv_main_like_item_text_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"/>

    </RelativeLayout>


</android.support.v7.widget.CardView>